
# --- Base config ---
set $mod Mod4

exec xsetroot --solid #050505

floating_modifier $mod
focus_follows_mouse no
new_window pixel 1
new_float pixel 1
hide_edge_borders smart

# --- Bordures ---
# 1px blanc focus√©, gris sinon
client.focused          #888888 #888888 #888888 #888888 #888888
client.unfocused        #454545 #454545 #454545 #454545 #454545


for_window [class=".*"] floating enable

for_window [window_type="normal"] resize set 100 ppt 100 ppt, move position center, border none

for_window [window_type="dialog"] resize set 1200 800, move position center, border pixel 1
for_window [class="Alacritty"] resize set 1200 800, move position center, border pixel 1




bindsym $mod+Escape exit
bindsym $mod+BackSpace kill

bindsym $mod+backslash exec alacritty

bindsym $mod+bracketleft "i3-focus-roll prev"
bindsym $mod+bracketright "i3-focus-roll"

bindsym $mod+equal resize set 100 ppt 100 ppt, move position center, border none
bindsym $mod+minus resize set 1200 px 800 px, move position center, border pixel 1
